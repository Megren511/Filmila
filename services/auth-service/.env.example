# Server Configuration
NODE_ENV=development
AUTH_SERVICE_PORT=8082

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/filmila_auth

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=24h

# Email Configuration (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@filmila.com

# reCAPTCHA Configuration
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
SKIP_RECAPTCHA=false

# Frontend URLs
APP_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://filmila-webapp.onrender.com

# Rate Limiting
LOGIN_RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
LOGIN_RATE_LIMIT_MAX=5          # 5 attempts
EMAIL_RATE_LIMIT_WINDOW=3600000 # 1 hour in milliseconds
EMAIL_RATE_LIMIT_MAX=3          # 3 emails
