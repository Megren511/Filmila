# API Configuration
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_WEBSITE_URL=http://localhost:3000

# AWS Configuration (for video hosting)
REACT_APP_AWS_REGION=us-east-1
REACT_APP_CLOUDFRONT_DOMAIN=https://your-distribution.cloudfront.net

# Stripe Configuration (for payments)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key

# reCAPTCHA Configuration
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Video Player Configuration
REACT_APP_MAX_VIDEO_QUALITY=1080p
REACT_APP_DEFAULT_VIDEO_QUALITY=720p

# Feature Flags
REACT_APP_ENABLE_SOCIAL_SHARING=true
REACT_APP_ENABLE_COMMENTS=true
REACT_APP_ENABLE_RATINGS=true

# Development Settings
REACT_APP_SKIP_RECAPTCHA=false
REACT_APP_MOCK_PAYMENTS=false
NODE_ENV=development
